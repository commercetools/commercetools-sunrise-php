<!DOCTYPE html>
<html lang="en">

<head>
  {{> common/htmlhead}}
</head>

<body>
  <div class="darkbg hidden"></div>
  {{> common/header}}
  <div class="my-orders">
    <div class="container">
      <div class="my-account-title">
        <span class="my-account-title-text icon-user">{{i18n "my-account:myAccount.title"}}</span>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="my-orders-wrapper">
            <div class="row">
              <div class="col-sm-3">
                {{> catalog/my-account-sidebar positionFour=true}}
              </div>
              <div id="my-account-desktop-content" class="col-sm-9">
                <div class="my-orders-content">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="my-orders-title hidden-xs">
                        {{content.contentTitle}}
                      </div>
                    </div>
                  </div>
                  <div class="my-orders-table-wrapper">
                    <div class="row">
                      <div class="col-sm-2 col-xs-4">
                        <div class="my-orders-table-titles">
                          {{content.orderNumberTitle}}
                        </div>
                      </div>
                      <div class="col-sm-2 hidden-xs">
                        <div class="my-orders-table-titles">
                          {{content.dateTitle}}
                        </div>
                      </div>
                      <div class="col-sm-2 col-xs-4">
                        <div class="my-orders-table-titles">
                          {{i18n "checkout:total"}}
                        </div>
                      </div>
                      <div class="col-sm-2 hidden-xs">
                        <div class="my-orders-table-titles">
                          {{content.paymentStatusTitle}}
                        </div>
                      </div>
                      <div class="col-sm-2 hidden-xs">
                        <div class="my-orders-table-titles">
                          {{content.shippingTitle}}
                        </div>
                      </div>
                      <div class="col-sm-2 col-xs-4">
                        <div class="my-orders-table-titles">
                          &nbsp;
                        </div>
                      </div>
                    </div>
                  </div>
                  {{#each content.order}}
                    <div class="my-orders-table-order">
                      <div class="row">
                        <div class="col-sm-2 col-xs-4">
                          <span>{{orderNumber}}</span>
                        </div>
                        <div class="col-sm-2 hidden-xs">
                          <span>{{date}}</span>
                        </div>
                        <div class="col-sm-2 col-xs-4">
                          <span>{{total}}</span>
                        </div>
                        <div class="col-sm-2 hidden-xs">
                          <span>{{paymentStatus}}</span>
                        </div>
                        <div class="col-sm-2 hidden-xs">
                          <span>{{shipping}}</span>
                        </div>
                        <div class="col-sm-2 col-xs-4 text-right">
                          <a href="{{detailUri}}"><button class="my-orders-view-order-btn">{{view}}</button></a>
                        </div>
                      </div>
                    </div>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- {{> catalog/wishlist}} --}}
  {{> common/footer}}
  {{> common/htmlscripts}}
</body>

</html>
